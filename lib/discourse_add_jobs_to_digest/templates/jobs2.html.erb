        <% if !jobs.present? %>

          <center class="digest-new-header" style="color:#0a0a0a;background:#f3f3f3;font-size:22px;font-weight:400;padding-bottom: 8px;font-family:Arial,sans-serif;mso-line-height-rule:exactly;line-height:36px;"><%= I18n.t("js.discourse_add_jobs_to_digest.no_jobs_title") %></center>
          <table width="100%" class="digest-new-topics body with-dir" style="background:#f3f3f3;border-spacing:0;border-collapse:collapse!important;font-family:Arial,sans-serif;font-size:14px;font-weight:200;line-height:1.3;padding:0;vertical-align:top;margin-bottom:2em;">
            <tr>
              <td class="side-spacer" style="padding:0;">&nbsp;</td>
              <td width="650" align="center" valign="top" style="border-collapse:collapse!important;margin:0;padding:0;">

                <table class="digest-new-topic with-dir" style="padding:0;vertical-align:top;width:100%">
                  <tbody>

                      <%= I18n.t("js.discourse_add_jobs_to_digest.no_jobs_description", 
                          job_site_url: job_site_url, job_site_name: job_site_name).html_safe %>
                  </tbody>
                </table>

              </td>
              <td class="side-spacer" style="padding:0; margin-bottom:2em">&nbsp;</td>
            </tr>
          </table>
        <% else %>
          <center class="digest-new-header" style="color:#0a0a0a;background:#f3f3f3;font-size:22px;font-weight:400;padding-bottom: 8px;font-family:Arial,sans-serif;mso-line-height-rule:exactly;line-height:36px;"><%= I18n.t("js.discourse_add_jobs_to_digest.title") %></center>

          <table width="100%" class="digest-new-topics body with-dir" style="background:#f3f3f3;border-spacing:0;border-collapse:collapse!important;font-family:Arial,sans-serif;font-size:14px;font-weight:200;line-height:1.3;padding:0;vertical-align:top;">
            <tr>
              <td class="side-spacer" style="padding:0;">&nbsp;</td>
              <td width="650" align="center" valign="top" style="border-collapse:collapse!important;margin:0;padding:0;">

                <table class="digest-new-topic with-dir" style="padding:0;vertical-align:top;width:100%">
                  <tbody>

                    <% jobs.each do |j| %>
                      <!--   Begin new topic  -->
                      <tr style="vertical-align:top;">
                        <td class="digest-new-topic-title with-dir" style="padding:8px;">
                          <a href="<%= j.url %>" style="font-weight:400;line-height:1.3;margin:0;padding:0;text-decoration:none;">
                            <strong><%= j.title %></strong>
                          </a>
                        </td>
                        </tr>


                      <tr style="vertical-align:top;">
                        <td class="digest-new-topic-category with-dir" style="padding:8px; vertical-align:middle;">
                          <p class="digest-new-topic-category" style="color:#0a0a0a;line-height:1.3;margin:0 0 0px 0;padding:0;">
                            <%= j.description %> (<%= j.location %>, since <%= I18n.l(j.created_at, format: :short_no_year) %>)
                          </p>
                        </td>
                        <td class="digest-new-topic-stat with-dir" style="padding:8px; vertical-align:middle;">
                          <a href="<%= j.url %>" class="digest-button with-accent-colors"
                            style="text-decoration:none;padding:8px 8px;white-space:nowrap;margin-top: 8px;">
                            <%= I18n.t("js.discourse_add_jobs_to_digest.job_link_button") %>
                          </a>
                        </td>
                      </tr>

                      <tr class="digest-new-topic-spacer"><td colspan="6" height="10px" style="border-collapse:collapse!important;line-height:10px;margin:0;mso-line-height-rule:exactly;padding:0;">&#xA0;</td></tr>
                      <!--   End new topic  -->

                    <% end %>

                  </tbody>
                </table>

              </td>
              <td class="side-spacer" style="padding:0;">&nbsp;</td>
            </tr>
          </table>

        <% end %>
